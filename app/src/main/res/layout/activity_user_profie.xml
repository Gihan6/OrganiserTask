<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".View.UserProfle.UserProfileActivity">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_userProfile_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:src="@drawable/man"></de.hdodenhof.circleimageview.CircleImageView>

    <TextView
        android:id="@+id/tv_userProfile_userName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/civ_userProfile_image"
        android:layout_margin="5dp"
        android:gravity="center"
        android:padding="5dp"
        android:textStyle="bold"
        android:text="@string/userName"
        android:textColor="@android:color/black" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_userProfile_favourite"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tv_userProfile_userName"
        android:layout_marginBottom="60dp" />

    <LinearLayout
        android:id="@+id/view_userProfile_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="5dp"
        android:gravity="bottom"
        android:padding="10dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="5dp"
            android:src="@drawable/turn_off" />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="@string/logout"
            android:textColor="@android:color/black"
            android:textSize="15dp" />

    </LinearLayout>

</RelativeLayout>